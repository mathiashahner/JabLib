void __fastcall TFormMain::convertClick(TObject *Sender)
{
int category;

   category = categoryList->ItemIndex;

   switch (category)
   {
      case 0:
      {
         break;
      }
      case 1:
      {
         break;
      }
      case 2:
      {
         break;
      }
      case 3:
      {
      char buffer[20];
      int output;

         memset( buffer, 0, sizeof(buffer) );
         strcpy( &buffer, input1->Text );

         output = RomansToDecimal ( buffer );

         input2->Text = IntToStr(output);
         break;
      }
      default:
      {
         break;
      }
   }
}
